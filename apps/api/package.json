{
  "name": "@agenda-amiga/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -r ts-node/register/transpile-only -r tsconfig-paths/register src/index.ts",
    "prebuild": "npm run db:generate",
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/normalize-dist.js",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:cov": "vitest --run --coverage",
    "db:status": "prisma migrate status",
    "db:dev": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "render:build": "npm ci && npm run db:generate && npm run build",
    "render:start": "npm run db:deploy && npm run start"
  },
  "dependencies": {
    "@agenda-amiga/shared": "link:../../packages/shared",
    "@prisma/client": "^6.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^6.2.0",
    "pg": "^8.13.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "^1.6.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  }
}
