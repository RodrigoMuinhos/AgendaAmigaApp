{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest", "node"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@agenda-amiga/shared": ["../../packages/shared/src/index.ts"],
      "@agenda-amiga/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"]
}
